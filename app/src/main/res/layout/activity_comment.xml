<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/commenttoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="댓글"
        app:titleTextColor="@color/white" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_below = "@id/commenttoolbar"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/commenttoolbar"
        tools:layout_editor_absoluteX="-2dp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:text="게시글"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileimage" />

    <View
        android:id="@+id/commentview"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:background="@drawable/view_border_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/like" />

    <ImageView
        android:id="@+id/commentprofile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/commentview"
        app:layout_constraintTop_toTopOf="@+id/commentview"
        app:srcCompat="@drawable/profile_foreground"
        android:background="@drawable/round_border_white"/>

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round_border_white"
        app:layout_constraintStart_toStartOf="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/profile_foreground" />


    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="닉네임"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileimage"
        app:layout_constraintStart_toEndOf="@+id/profileimage"
        app:layout_constraintTop_toTopOf="@+id/profileimage" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/commentview"
        app:layout_constraintTop_toBottomOf="@+id/commentview" />

    <Button
        android:id="@+id/addcommentbtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@drawable/round_border_white"
        android:text="게시"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/comment"
        app:layout_constraintEnd_toEndOf="@+id/commentview"
        app:layout_constraintTop_toTopOf="@+id/comment" />

    <TextView
        android:id="@+id/likenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/like"
        app:layout_constraintStart_toEndOf="@+id/like"
        app:layout_constraintTop_toTopOf="@+id/like" />

    <Button
        android:id="@+id/like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/heart_drawble"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/content" />

    <TextView
        android:id="@+id/commentnick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickname"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/commentprofile"
        app:layout_constraintStart_toStartOf="@+id/commentprofile"
        app:layout_constraintTop_toBottomOf="@+id/commentprofile" />

    <TextView
        android:id="@+id/commentcontent"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/round_border_white"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/commentnick"
        app:layout_constraintEnd_toEndOf="@+id/commentview"
        app:layout_constraintStart_toEndOf="@+id/commentprofile"
        app:layout_constraintTop_toTopOf="@+id/commentprofile" />
</androidx.constraintlayout.widget.ConstraintLayout>