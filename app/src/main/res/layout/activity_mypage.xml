<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="마이페이지"
            app:titleTextColor="@color/white" />

        <ImageView
            android:id="@+id/MyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar1"
            app:srcCompat="@drawable/profile_foreground"
            android:layout_below="@id/toolbar1"/>

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Name"
            android:textColor="@color/white"
            android:layout_below="@id/toolbar1"
            android:layout_toRightOf="@+id/MyProfile"
             />

        <TextView
            android:id="@+id/StateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="상태메세지 입니다."
            android:textColor="@color/white"
            android:layout_below="@id/Name"
            android:layout_toRightOf="@+id/MyProfile" />

    <TextView
        android:id="@+id/Follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar1"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/Name"
        android:text="팔로워"
        android:textColor="@color/white" />

        <TextView
            android:id="@+id/Following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로잉"
            android:textColor="@color/white"
            android:layout_below="@id/toolbar1"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/Follower" />

        <TextView
            android:id="@+id/Follower_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/Name"
            android:text="25"
            android:textColor="@color/white"
            android:layout_below="@id/Follower" />

        <TextView
            android:id="@+id/Following_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/white"
            android:layout_below="@id/Following"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/Follower" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_below="@id/MyProfile"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="1.0" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginTop="16dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/mypageimage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/view"
                        app:srcCompat="@color/white"
                        tools:ignore="NotSibling" />
                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="content"
                        android:textColor="@android:color/black"
                        android:layout_below="@id/mypageimage"
                        android:textSize="20sp"/>

                    <Button
                        android:id="@+id/like"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="좋아요"
                        android:layout_below="@id/content"
                        />
                    <TextView
                        android:id="@+id/like_number"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="0"
                        android:layout_below="@id/content"
                        android:layout_toRightOf="@id/like"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        />

                    <Button
                        android:id="@+id/comment"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="댓글"
                        android:layout_toRightOf="@id/like_number"
                        android:layout_below="@id/content"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:id="@+id/comment_number"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="0"
                        android:layout_below="@id/content"
                        android:layout_toRightOf="@id/comment"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        />
                    <Button
                        android:id="@+id/share"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/content"
                        android:layout_toRightOf="@id/comment_number"
                        android:text=">"
                        android:layout_marginLeft="135dp"
                        tools:ignore="TouchTargetSizeCheck" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>

